{
  "name": "@wisemen/vue-core",
  "type": "module",
  "version": "0.0.0",
  "author": "Wisemen",
  "packageManager": "pnpm@10.7.0",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "rimraf packages/vue-core/dist && pnpm run -r build",
    "docs:dev": "pnpm run -r docs:dev",
    "docs:build": "pnpm run -r build && pnpm run -r docs:build",
    "pub:release": "cd packages/components && pnpm pub:release --no-git-checks",
    "pub:release-query": "cd packages/query && pnpm pub:release --no-git-checks",
    "lint": "pnpm run -r lint",
    "dev": "turbo run dev",
    "test": "pnpm run -r test",
    "type-check": "pnpm run -r type-check",
    "precommit": "pnpm run -r lint --fix && pnpm run -r type-check && pnpm run -r test && pnpm run -r docs:gen",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "husky": "^9.1.7",
    "rimraf": "6.0.1",
    "turbo": "2.4.4",
    "vitest": "3.0.9"
  }
}
