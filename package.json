{
  "name": "@wisemen/vue-core-monorepo",
  "type": "module",
  "version": "0.0.0",
  "author": "Wisemen",
  "packageManager": "pnpm@10.7.0",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo watch dev",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "type-check": "turbo run type-check",
    "cleanup": "turbo run cleanup",
    "story:dev": "turbo watch story:dev",
    "story:build": "turbo run story:build",
    "docs:dev": "turbo watch docs:dev",
    "docs:build": "turbo run docs:build",
    "docs:gen": "turbo run docs:gen",
    "docs:gen-eslint": "cd ./packages/eslint-config && npx @eslint/config-inspector build --base /vue-core/eslint-inspector --outDir ../../docs/public/eslint-inspector --config ./src/inspector.ts",
    "precommit": "turbo run lint type-check test",
    "ci": "turbo run build test lint type-check",
    "build-storybook": "storybook build -c ./packages/design-system/.storybook -o ./static/storybook"
  },
  "devDependencies": {
    "@commitlint/cli": "catalog:tooling",
    "@commitlint/config-conventional": "catalog:tooling",
    "husky": "catalog:build",
    "rimraf": "catalog:build",
    "turbo": "catalog:build",
    "vitest": "catalog:test"
  },
  "dependencies": {
    "@changesets/cli": "catalog:tooling"
  },
  "pnpm": {
    "overrides": {
      "axios@>=1.0.0 <1.12.0": ">=1.12.0",
      "lodash@>=4.0.0 <=4.17.22": ">=4.17.23",
      "esbuild@<=0.24.2": ">=0.25.0"
    }
  }
}
