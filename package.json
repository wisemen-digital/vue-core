{
  "name": "@wisemen/vue-core-monorepo",
  "type": "module",
  "version": "0.0.0",
  "author": "Wisemen",
  "packageManager": "pnpm@10.7.0",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "rimraf packages/vue-core/dist && pnpm run -r build",
    "docs:gen-eslint": "cd ./packages/eslint-plugin &&  npx @eslint/config-inspector build --base /vue-core/eslint-inspector --outDir ../../docs/public/eslint-inspector",
    "docs:dev": "pnpm run -r docs:dev",
    "docs:build": "pnpm run -r build && pnpm run -r docs:build",
    "pub:release": "cd packages/components && pnpm pub:release --no-git-checks",
    "pub:release-query": "cd packages/query && pnpm pub:release --no-git-checks",
    "lint": "turbo run lint",
    "cleanup": "pnpm -r cleanup",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "lint:fix": "turbo run lint:fix",
    "type-check": "turbo run type-check",
    "precommit": "pnpm run lint --fix && pnpm run type-check && pnpm run test && pnpm run -r docs:gen",
    "prepare": "pnpm build"
  },
  "devDependencies": {
    "@commitlint/cli": "catalog:tooling",
    "@commitlint/config-conventional": "catalog:tooling",
    "husky": "catalog:build",
    "rimraf": "catalog:build",
    "turbo": "catalog:build",
    "vitest": "catalog:test"
  },
  "dependencies": {
    "@changesets/cli": "catalog:tooling"
  }
}
