{
  "compilerOptions": {
    "target": "esnext",
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "node",

    "paths": {
      "@components/*": ["../components/src/*"],
      "@/*": ["./"]
    },
    "resolveJsonModule": true,
    "types": ["node", "@types/dom-view-transitions"],
    "strict": true,
    "declaration": false,
    "outDir": "dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "files": ["tailwind.config.ts", "postcss.config.js", "eslint.config.js"],
  "include": [
    "playground/**/*.ts",
    "playground/**/*.tsx",
    "playground/**/*.vue",
    ".vitepress/config.mts",
    "../components/env.d.ts",
    "../components/src/**/*",
    "../components/src/**/*.ts",
    "../components/src/**/*.tsx",
    "../components/src/**/*.vue",
    "components/**/*.vue"

  ]
}
