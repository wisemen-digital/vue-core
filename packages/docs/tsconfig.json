{
  "compilerOptions": {
    "target": "esnext",
    "jsx": "preserve",
    "lib": [
      "esnext",
      "dom"
    ],
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "@components/*": [
        "../components/src/*"
      ],
      "@docs/*": [
        "./*"
      ]
    },
    "resolveJsonModule": true,
    "types": [
      "node",
      "@types/dom-view-transitions"
    ],
    "strict": true,
    "declaration": false,
    "outDir": "dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "files": [
    "postcss.config.js",
    "eslint.config.js"
  ],
  "include": [
    "./playground/**/*.ts",
    "./playground/**/*.tsx",
    "./playground/**/*.vue",
    ".vitepress/config.mts",
    ".vitepress/theme/index.ts",
    "tailwind.config.ts",

    "../components/env.d.ts",
    "../components/src/**/*",
    "../components/src/**/*.ts",
    "../components/src/**/*.tsx",
    "../components/src/**/*.vue",
    "./components/**/*.vue"
  ]
}
