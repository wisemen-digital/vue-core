{
  "compilerOptions": {
    "target": "ES2020",
    "jsx": "preserve",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "useDefineForClassFields": true,
    "module": "ESNext",

    /* Bundler mode */
    "moduleResolution": "bundler",

    "paths": {
      "@/*": [
        "../components/src/*"
      ],
      "@components/*": [
        "../components/src/*"
      ]
    },
    "resolveJsonModule": true,
    "types": ["node", "@types/dom-view-transitions"],
    "allowImportingTsExtensions": true,

    /* Linting */
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmit": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "references": [{ "path": "./tsconfig.node.json" }],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "App.vue",
    "../components/env.d.ts",
    "../components/src/**/*",
    "../components/src/**/*.ts",
    "../components/src/**/*.tsx",
    "../components/src/**/*.vue",
    "./components/**/*.vue",

    "tailwind.config.ts",
    "postcss.config.js",
    "vite.config.ts",
    "eslint.config.js"
  ]

}
