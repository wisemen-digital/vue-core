{
  "name": "@wisemen/vue-core-design-system",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "version": "0.0.1-beta.0",
  "license": "MIT",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "style": "./dist/index.css"
    }
  },
  "main": "./dist/index.umd.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "typings": "./dist/index.d.ts",
  "files": [
    "./dist"
  ],
  "scripts": {
    "build": "vite build",
    "pub:release": "pnpm publish --access public",
    "pub:beta": "pnpm publish --no-git-checks --access public --tag beta",
    "pub:next": "pnpm publish --no-git-checks --access public --tag next",
    "cleanup": "rimraf dist/ node_modules/ .turbo/",
    "lint": "pnpm eslint --fix .",
    "test": "vitest --run",
    "type-check": "vue-tsc --noEmit",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "peerDependencies": {
    "motion-v": "catalog:peer",
    "vue": "catalog:peer"
  },
  "dependencies": {
    "@tailwindcss/vite": "4.1.17",
    "reka-ui": "^2.6.1",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.17"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "5.0.0",
    "@storybook/addon-a11y": "10.1.11",
    "@storybook/addon-docs": "10.1.11",
    "@storybook/addon-onboarding": "10.1.11",
    "@storybook/addon-vitest": "10.1.11",
    "@storybook/vue3": "10.1.11",
    "@storybook/vue3-vite": "10.1.11",
    "@types/node": "catalog:types",
    "@vitest/browser-playwright": "catalog:test",
    "@vitest/coverage-v8": "catalog:test",
    "@wisemen/eslint-config-vue": "catalog:lint",
    "eslint": "catalog:lint",
    "eslint-plugin-storybook": "10.1.11",
    "motion-v": "catalog:peer",
    "playwright": "1.57.0",
    "storybook": "10.1.11",
    "typescript": "catalog:build",
    "vitest": "catalog:test",
    "vue": "3.5.26",
    "vue-tsc": "catalog:vue"
  }
}
