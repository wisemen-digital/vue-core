{
  // tsconfig for type-check only
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "target": "esnext",
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["src/*"]
    },
    "resolveJsonModule": true,
    "types": [],
    "strict": true,
    "declaration": false,
    "outDir": "dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "env.d.ts",
    "playground/**/*",
    "playground/**/*.ts",
    "playground/**/*.tsx",
    "playground/**/*.vue",
    "components-next/**/*",
    "components-next/**/*.ts",
    "components-next/**/*.tsx",
    "components-next/**/*.vue"
  ]
}
